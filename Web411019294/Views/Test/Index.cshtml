
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Test", FormMethod.Post))
{
<div>
    帳號:@Html.TextBox("account")<br/>
    密碼:@Html.Password("password")<br/>
    年齡:@Html.TextBox("age")<br/>
    性別:@Html.RadioButton("gender", "A")男生
    @Html.RadioButton("gender", "B")女生<br/>
    興趣:<br/>@Html.CheckBox("swimming", "A")游泳<br/>
    @Html.CheckBox("sinning", "B")唱歌<br/>
    @Html.CheckBox("camping","C")露營<br/>
    關於我:@Html.TextArea("about")
    </div>
}
@{
    var message = "你好";
    var isStudent = true;
}
<p>@message</p>
<p>@DateTime.Now</p>
@if (isStudent)
{
<p>是學生</p>
}
else
{
<p>不是學生</p>
}

<h2>1~10</h2>

@for (int i = 1; i < 11; i++)
{
    <p>@i</p>
}